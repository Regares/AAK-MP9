#include <stdio.h>

int main()
{
    int k;
    printf("Введите порядковый номер дня (от 1 до 365): ");
    scanf("%d", &k);
    if ((k < 1) || (k > 365))
    {
        printf("День не в диапазоне условия.");
    }
    else
    {
        k = k % 7;
        printf("Это день номер %d", k);
    }
    return 0;
}
