#include <stdio.h>

int main()
{
    int k, n;
    printf("Введите порядковый номер дня (от 1 до 365) и номер первого дня в году (от 1 до 7): ");
    scanf("%d%d", &k, &n);
    if ((k < 1) || (k > 365) || (n < 1) || (n > 7)) 
    {
        printf("Ошибка: одно из значений не подходит по условию.");
    }
    else
    {
        k = (k % 7) + n;
        if (k > 7)
        {
            k = k - 8;
            printf("Это день номер %d", k);
        }
        else
        {
            printf("Это день номер %d", k);
        }
    }
    return 0;
}
